{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"preserveConstEnums": true,
		"removeComments": true,
    "strictNullChecks": true,
    "lib": [
      "esnext"
    ]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"!node_modules/@types",
		"test/**/*-spec.ts"
	]
}
